extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/student.css")

block contents  
    main
        if studs.length > 0
            .grid
                each student in studs
                    article.card.product-item
                        header.card__header
                            h1.product__titleGreat #{student.name} #{student.parentage}
                    
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book")
                    
                        div.card__content
                            p.product__description #{student.roll_no}
        else
            h1 No Students!
