extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/student.css")

block contents  
    main
        form.product-form(action="/admin/add", method="POST")
            .form-control
                label(for="name") Name
                input(type="text", name="name")#name
            .form-control
                label(for="parentage") Parentage
                input(type="text", name="parentage")#parentage
            .form-control
                label(for="roll_no") Roll No
                input(type="text", name="roll_no")#roll_no
            button.btn(type="submit") Add Student